{
  "name": "url-shortener",
  "version": "1.0.0",
  "description": "Production-ready URL shortener platform built as a monorepo with NestJS backend, Next.js frontend, and Supabase integration",
  "private": true,
  "scripts": {
    "clean": "turbo run clean",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install",
    "dev:backend": "pnpm --filter backend run start:dev",
    "dev:frontend": "pnpm --filter frontend run dev",
    "dev:types": "pnpm --filter @url-shortener/types run dev",
    "dev:all": "turbo run dev --parallel",
    "build:backend": "pnpm --filter backend run build",
    "build:frontend": "pnpm --filter frontend run build",
    "build:types": "pnpm --filter @url-shortener/types run build",
    "test:backend": "pnpm --filter backend run test",
    "test:frontend": "pnpm --filter frontend run test",
    "test:types": "pnpm --filter @url-shortener/types run test",
    "lint:backend": "pnpm --filter backend run lint",
    "lint:frontend": "pnpm --filter frontend run lint",
    "lint:root": "eslint . --fix",
    "start:backend": "pnpm --filter backend run start:prod",
    "start:frontend": "pnpm --filter frontend run start",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:status": "supabase status",
    "supabase:reset": "supabase db reset",
    "docker:build": "docker build -f apps/backend/Dockerfile -t url-shortener-backend .",
    "docker:run": "docker run -d --env-file=.env.docker -p 8000:8000 url-shortener-backend",
    "docker:stop": "docker stop url-shortener-backend",
    "stack:dev": "pnpm supabase:start && docker compose up --build -d",
    "stack:stop": "docker compose down && pnpm supabase:stop",
    "ci:build": "turbo run build",
    "ci:test": "turbo run test",
    "ci:lint": "turbo run lint",
    "ci:type-check": "turbo run type-check"
  },
  "keywords": [
    "url-shortener",
    "monorepo",
    "nestjs",
    "nextjs",
    "supabase",
    "typescript",
    "postgresql",
    "docker",
    "turbo",
    "pnpm"
  ],
  "author": "Kashaf Ahmed <kashafaahmed@gmail.com>",
  "license": "MIT",
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@eslint/json": "^0.13.1",
    "@eslint/markdown": "^7.1.0",
    "@types/node": "^24.1.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jiti": "^2.5.1",
    "lint-staged": "^16.1.2",
    "prettier": "3.6.2",
    "supabase": "^2.33.5",
    "turbo": "^2.5.5",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  }
}
