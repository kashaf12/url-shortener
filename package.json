{
  "name": "url-shortener",
  "version": "1.0.0",
  "description": "A URL shortener platform built as a monorepo",
  "private": true,
  "scripts": {
    "clean": "turbo run clean",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:status": "supabase status",
    "dev:backend": "pnpm supabase:start && pnpm --filter backend run start:dev",
    "start:backend": "pnpm --filter backend run start",
    "prod:backend": "pnpm --filter backend run start:prod",
    "dev:frontend": "docker-compose -f docker-compose.dev.yml up --build",
    "start:frontend": "pnpm --filter frontend run start",
    "lint:root": "eslint . --fix",
    "type-check:root": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install",
    "build:backend-image": "docker build -f apps/backend/Dockerfile -t url-shortener-backend .",
    "dev:stack": "pnpm supabase:start && docker compose up --build -d",
    "stop:stack": "docker compose down && pnpm supabase:stop",
    "start:backend-docker": "docker run -d --env-file=.env -p 8000:8000 url-shortener-backend"
  },
  "keywords": [
    "url-shortener",
    "monorepo",
    "nextjs",
    "nestjs",
    "supabase"
  ],
  "license": "MIT",
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@eslint/json": "^0.13.1",
    "@eslint/markdown": "^7.1.0",
    "@types/node": "^24.1.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jiti": "^2.5.1",
    "lint-staged": "^16.1.2",
    "prettier": "3.6.2",
    "supabase": "^2.33.5",
    "turbo": "^2.5.5",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  }
}
