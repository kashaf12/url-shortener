{
  "name": "url-shortener",
  "version": "1.0.0",
  "description": "A URL shortener platform built as a monorepo",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "start:backend": "pnpm --filter ./apps/backend run start",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "lint:root": "eslint . --fix",
    "type-check": "turbo run type-check",
    "type-check:root": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "keywords": [
    "url-shortener",
    "monorepo",
    "nextjs",
    "nestjs"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@9.0.0",
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@eslint/json": "^0.13.1",
    "@eslint/markdown": "^7.1.0",
    "@types/node": "^24.1.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jiti": "^2.5.1",
    "lint-staged": "^16.1.2",
    "prettier": "3.6.2",
    "turbo": "^2.5.5",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  }
}
